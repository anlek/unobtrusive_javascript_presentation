<% form_for(@todo) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :rows => 4 %>
  </p>
  <p>
    <%= f.submit 'Save' %> or <%= link_to "Cancel", todos_path %>
  </p>
<% end %>
