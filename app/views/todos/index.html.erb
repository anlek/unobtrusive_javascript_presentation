<% title "Listing Todos" %>

<% form_tag(update_all_todos_path, {:class => "form", :method => :put}) do %>
  <ul id="todos">
    <%= render(:partial => "todo", :collection => @todos) %>
  </ul>
  <div class="action">
    <%= submit_tag "Update Completion", :class => 'button', :id => 'update_all_todos' %>  
  </div>
<% end -%>
<p>
  <%= link_to 'New todo', new_todo_path %>  
</p>
